          //     />
          //     <div
          //       class={`absolute bottom-1 left-1 py-0.5 px-2 text-sm font-medium rounded max-w-fit ${
          //         product.category === "Accesorios de Juego"
          //           ? "bg-blue-600"
          //           : product.category === "PCs de Juego"
          //             ? "bg-green-700"
          //             : product.category === "Laptops de Juego"
          //               ? "bg-indigo-600"
          //               : product.category === "Componentes"
          //                 ? "bg-red-600"
          //                 : product.category === "Cajas para PC"
          //                   ? "bg-sky-700"
          //                   : product.category === "Consolas"
          //                     ? "bg-slate-500"
          //                     : product.category === "Monitores"
          //                       ? "bg-emerald-700"
          //                       : "bg-black"
          //       }`}
